{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/database/src",
  "projectType": "library",
  "targets": {
    "build-experimental": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "yarn build-experimental",
        "cwd": "packages/database"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "yarn npm publish --tolerate-republish --access public",
        "cwd": "packages/database"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/database/src/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/database"],
      "options": {
        "jestConfig": "packages/database/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
